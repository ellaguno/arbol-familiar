{
    "name": "Research Assistant",
    "slug": "research-assistant",
    "version": "1.0.0",
    "description": "Asistente de investigacion genealogica con IA",
    "description_en": "Genealogy research assistant with AI",
    "author": "Mi Familia",
    "provider": "ResearchAssistantPlugin",
    "requires": {
        "php": ">=8.1",
        "mi-familia": ">=2.0.0"
    },
    "autoload": {
        "psr-4": {
            "Plugins\\ResearchAssistant\\": "src/"
        }
    },
    "hooks": [
        "person.show.actions"
    ],
    "settings": {
        "ai_provider": "openrouter",
        "ai_model": "anthropic/claude-3.5-sonnet",
        "openrouter_api_key": "",
        "deepseek_api_key": "",
        "openai_api_key": "",
        "anthropic_api_key": "",
        "familysearch_enabled": true,
        "wikipedia_enabled": true,
        "max_results_per_source": 10,
        "cache_ttl": 3600
    }
}
